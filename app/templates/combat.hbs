<h1>Combat {{model.id}}</h1>

<p><i>Organized by {{model.organizer}}</i></p>

{{#if model.can_manage}}
  <div class="alert alert-info">The combat setup screen is being redesigned and is currently unavailable.</div>
{{/if}}

<table class="table">
<tbody>
<tr>
    <th>Name</th>
    <th>Damage</th>
    <th>Weapon</th>
    <th>Vehicle</th>
    <th>Stance</th>
    <th>Action</th>

</tr>



{{#each model.teams as |t| }}    

<tr><td colspan="6"><h3>Team {{t.team}}</h3></td></tr>

    {{#each t.combatants as |c| }}
    
    <tr>
        <td>
            {{c.name}}
        </td>
        
        <td>
            {{#if c.is_ko}}
            <span style="color:red" >
                <i class="fa fa-crosshairs" aria-hidden="true"></i>
                K O 
                <i class="fa fa-crosshairs" aria-hidden="true"></i>
            </span>
            {{else}}
            <span style="color:red" >
                
                {{#each c.damage_boxes as |d|}}
                    <i class="fa fa-heartbeat" style="color:red" aria-hidden="true"></i>
                {{/each}}
                
            </span>
            {{/if}}
        </td>
        
        <td>
            {{c.weapon}} {{c.ammo}}
        </td>
        
        <td>
            {{c.vehicle}}
        </td>
        
        <td>
            {{c.stance}}
        </td>
        
        <td>
            {{c.action}}
        </td>
    </tr>
    
    {{/each}}
  

{{/each}}

    
</tbody>
</table>

<hr/>
<p>{{#link-to 'combats'}}<i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to Combat List{{/link-to}}</p>


{{outlet}}