{{title 'My Scenes'}}
 
 <h1>My Scenes</h1>
 
 <div class="row">
   <div class="col col-xs-3">
     
       {{#each model.scenes as |scene|}}
         
         <button {{action 'switchScene' scene.id}} 
            class="btn btn-default chat-button {{if (eq scene.id currentScene.id) 'chat-button-active' ''}}">
           #{{scene.id}} - {{scene.location.name}} 
           {{#if scene.is_unread}}
             <span class="label label-pill label-primary"> <i class="fa fa-flag" aria-hidden="true"></i></span>
           {{/if}}
           
           <p>
             {{#each scene.participants as |p|}}
               {{p.name}}
             {{/each}}
           </p>
           </button>
         
       {{/each}}
   
       <p class="cg-tip">
         Only scenes you have joined or watched will show up here.
       </p>
     
     
      
     <br/>
     
     
   </div>
   
   <div class="col col-xs-9">
       
      <h3>Scene {{currentScene.id}} - {{currentScene.icdate}}
          {{#if currentScene.title}}
           - {{currentScene.title}}
           {{/if}}
       </h3>

      {{live-scene-context scene=currentScene}}
    
       {{live-scene-control scene=currentScene locations=model.locations abilities=model.abilities scrollPaused=scrollPaused playerName=currentUser.name refresh=(action "refresh") scrollScene=(action "scrollScene") setScroll=(action "setScroll")}}
       

    </div>
</div>


{{outlet}}