{{page-title 'Create Area'}}
<h1>Create Area</h1>

<p><b>Name:</b></p>
<p><Input @type="text" size={{25}} id="name" @enter={{action "save"}} @value={{this.name}} /></p>

<p><b>Summary:</b></p>

<MarkdownEditor @text={{this.summary}} />


<p><b>Description:</b></p>

<MarkdownEditor @text={{this.description}} />

<p><b>Parent Area:</b></p>

<PowerSelect @selected={{this.parentArea}}  @options={{this.model.areas}} @searchEnabled=true @searchField="name" @allowClear=true @onChange={{action "changeParent"}} as |area|>
   {{area.name}}
</PowerSelect>
                             
<div class="action-buttons">
  <LinkTo @route="locations" class="btn btn-secondary">Cancel</LinkTo>
  <button {{action "save"}} class="btn btn-primary">Save</button>
</div>

<FlashMessages />

