<h1>{{model.title}}</h1>

<p>{{#link-to 'events'}}<i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to Events{{/link-to}}</p>

<table>
    <tr>
        <td>
            <b>Organizer:</b> 
        </td>
        <td>
            {{model.organizer}}
        </td>
    </tr>

    <tr>
        <td>
            <b>Starts:</b>
        </td>
        <td>
             {{model.start_datetime_local}} ({{model.start_time_standard}})
        </td>
    </tr>
    
</table>

<br/>
    
<div class="ansi">
    {{{ansi-format text=model.description}}}
</div>


<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
  {{#if model.can_manage}}

      <button {{action 'delete'}} class="btn btn-warning">Delete</button>
      {{#link-to 'events.edit' model.id class="btn btn-primary"}}Edit{{/link-to}}
  {{/if}}
      
  </div>
  </div>
</div>