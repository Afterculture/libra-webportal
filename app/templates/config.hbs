<h1>Edit {{model.file}} Config</h1>
    
    {{#each-in model.config as |key config|}}
        <h2>{{config.key}}</h2>
            <textarea value={{config.new_value}} cols="80" rows={{config.lines}} class="code-editor" onchange={{action 'textChanged' config.warning}}></textarea>
            {{config.warning}}
           
    {{/each-in}}

<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
            {{#link-to 'setup' class="btn btn-default"}}Cancel{{/link-to}}
            <button {{action 'save'}} class="btn btn-primary">Save</button>
        </div>
        
        {{flash-messages}}
    </div>
</div>

{{outlet}}