{{title 'Edit Area'}}
<h1>Edit Area</h1>

<p><b>Name:</b></p>
<p>{{input type="text" size=50 id="name" enter="create" value=model.name}}</p>

{{#if model.maps}}
<p><b>Map:</b></p>
<p>
{{#power-select selected=model.map allowClear="true" searchField="name" options=model.maps onchange=(action "mapChanged") as |map|}}
  {{map.name}}
{{/power-select}}
</p>
{{/if}}

<p><b>Description:</b></p>

{{markdown-editor text=model.description}}


{{#link-to 'locations' class="btn btn-default"}}Cancel{{/link-to}}
<button {{action (mut confirmDelete) true}} class="btn btn-warning">Delete</button>
<button {{action "edit"}} class="btn btn-primary">Save</button>
{{flash-messages}}

{{#bs-modal-simple
    title="Confirm Delete"
    closeTitle="Cancel"
    submitTitle="Confirm"
    size=null
    fade=false
    open=confirmDelete
    onSubmit=(action "delete")
    onHide=(action (mut confirmDelete) null)}}
    You're about to delete area {{model.name}}. This cannot be undone.  Are you sure?
  {{/bs-modal-simple}}